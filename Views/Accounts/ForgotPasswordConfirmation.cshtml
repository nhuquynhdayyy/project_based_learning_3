@{
    ViewData["Title"] = "Xác Nhận Yêu Cầu Đặt Lại Mật Khẩu";
    // Layout = "~/Views/Shared/_AccountLayout.cshtml"; // Nếu có
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card login-card shadow-sm">
                <div class="card-body">
                    <div class="text-center mb-4">
                        <a asp-controller="Home" asp-action="Index">
                            <img src="/images/logo3.jpg" alt="Logo" width="100" class="mb-2">
                        </a>
                        <h2 class="card-title">@ViewData["Title"]</h2>
                    </div>
                    <hr />
                    <p class="text-center">
                        @ViewBag.Message
                    </p>
                    <div class="text-center mt-4">
                        <a asp-action="Login" asp-controller="Accounts" class="btn btn-secondary">Quay lại Đăng nhập</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>