@model TourismWeb.Models.ViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = "Đặt Lại Mật Khẩu";
    // Layout = "~/Views/Shared/_AccountLayout.cshtml"; // Nếu có
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card login-card shadow-sm">
                <div class="card-body">
                    <div class="text-center mb-4">
                        <a asp-controller="Home" asp-action="Index">
                            <img src="/images/logo3.jpg" alt="Logo" width="100" class="mb-2">
                        </a>
                        <h2 class="card-title">@ViewData["Title"]</h2>
                    </div>
                    <p class="text-center text-muted mb-4">
                        Vui lòng nhập mật khẩu mới của bạn.
                    </p>
                    <hr />

                    @if (!ViewData.ModelState.IsValid && ViewData.ModelState[""] != null &&
                                        ViewData.ModelState[""].Errors.Any())
                    {
                        <div class="alert alert-danger" role="alert">
                            @foreach (var error in ViewData.ModelState[""].Errors)
                            {
                                <p>@error.ErrorMessage</p>
                            }
                        </div>
                    }
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
                    }


                    <form asp-action="ResetPassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Token" /> @* Token được truyền ẩn *@

                        <div class="form-floating mb-3">
                            <input asp-for="Password" class="form-control" placeholder="Mật khẩu mới" />
                            <label asp-for="Password"></label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Xác nhận mật khẩu mới" />
                            <label asp-for="ConfirmPassword"></label>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Đặt Lại Mật Khẩu</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>