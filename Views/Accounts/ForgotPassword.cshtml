@model TourismWeb.Models.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Quên Mật Khẩu";
    // Nếu bạn có Layout riêng cho trang Login/Register thì dùng nó
    // Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card login-card shadow-sm"> @* login-card là class bạn đã có *@
                <div class="card-body">
                    <div class="text-center mb-4">
                        <a asp-controller="Home" asp-action="Index">
                            <img src="/images/logo3.jpg" alt="Logo" width="100" class="mb-2">
                        </a>
                        <h2 class="card-title">@ViewData["Title"]</h2>
                    </div>

                    <p class="text-center text-muted mb-4">
                        Vui lòng nhập địa chỉ email đã đăng ký. Chúng tôi sẽ gửi một liên kết để bạn đặt lại mật khẩu.
                    </p>

                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.ErrorMessage
                        </div>
                    }

                    <form asp-action="ForgotPassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                            <label asp-for="Email">Địa chỉ Email</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">Gửi Liên Kết Đặt Lại</button>
                        </div>
                    </form>
                    <div class="text-center">
                        <a asp-action="Login" asp-controller="Accounts">Quay lại Đăng nhập</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>