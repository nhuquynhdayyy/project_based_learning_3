@section Styles {
    <link rel="stylesheet" href="~/cssadmin/settings.css">
    <link rel="stylesheet" href="~/cssadmin/dark-mode.css">

    <link rel="stylesheet" href="~/cssadmin/styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

}

@{
    ViewData["Title"] = "Cài Đặt - Hệ Thống Quản Trị";
}
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Scripts {
    <script src="~/js/jsadmin/settings.js"></script>
    <script src="~/js/jsadmin/common.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
}

<div class="app-container">
    <!-- Sidebar -->


    <!-- Main Content -->
    <div class="main-content">
        <main class="content-wrapper">
            <div class="page-header">
                <h1 class="page-title">Cài Đặt</h1>
            </div>

            <div class="settings-container">
                <div class="settings-sidebar">
                    <div class="settings-nav">
                        <button class="settings-nav-item active" data-tab="general">
                            <i class="fas fa-sliders-h"></i>
                            <span>Cài đặt chung</span>
                        </button>
                        <button class="settings-nav-item" data-tab="appearance">
                            <i class="fas fa-palette"></i>
                            <span>Giao diện</span>
                        </button>
                        <button class="settings-nav-item" data-tab="notifications">
                            <i class="fas fa-bell"></i>
                            <span>Thông báo</span>
                        </button>
                        <button class="settings-nav-item" data-tab="privacy">
                            <i class="fas fa-shield-alt"></i>
                            <span>Quyền riêng tư</span>
                        </button>
                        <button class="settings-nav-item" data-tab="backup">
                            <i class="fas fa-database"></i>
                            <span>Sao lưu & Khôi phục</span>
                        </button>
                        <button class="settings-nav-item" data-tab="api">
                            <i class="fas fa-code"></i>
                            <span>API & Tích hợp</span>
                        </button>
                        <button class="settings-nav-item" data-tab="about">
                            <i class="fas fa-info-circle"></i>
                            <span>Thông tin hệ thống</span>
                        </button>
                    </div>
                </div>
                <div class="settings-content">
                    <!-- General Settings -->
                    <div class="settings-tab active" id="general">
                        <h2 class="settings-title">Cài đặt chung</h2>

                        <div class="settings-section">
                            <h3 class="section-title">Thông tin trang web</h3>
                            <div class="settings-form">
                                <div class="form-group">
                                    <label for="site-name">Tên trang web</label>
                                    <input type="text" id="site-name" value="Hệ Thống Quản Trị Bài Viết Du Lịch">
                                </div>
                                <div class="form-group">
                                    <label for="site-description">Mô tả</label>
                                    <textarea id="site-description"
                                        rows="3">Hệ thống quản trị bài viết du lịch giúp bạn quản lý nội dung, người dùng và tương tác một cách hiệu quả.</textarea>
                                </div>
                                <div class="form-group">
                                    <label for="site-url">URL trang web</label>
                                    <input type="url" id="site-url" value="https://example.com">
                                </div>
                            </div>
                        </div>

                        <div class="settings-section">
                            <h3 class="section-title">Ngôn ngữ & Khu vực</h3>
                            <div class="settings-form">
                                <div class="form-group">
                                    <label for="language">Ngôn ngữ</label>
                                    <select id="language">
                                        <option value="vi" selected>Tiếng Việt</option>
                                        <option value="en">English</option>
                                        <option value="fr">Français</option>
                                        <option value="de">Deutsch</option>
                                        <option value="ja">日本語</option>
                                        <option value="zh">中文</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="timezone">Múi giờ</label>
                                    <select id="timezone">
                                        <option value="Asia/Ho_Chi_Minh" selected>(GMT+7:00) Hà Nội, Bangkok,
                                            Jakarta</option>
                                        <option value="Asia/Tokyo">(GMT+9:00) Tokyo, Seoul</option>
                                        <option value="Europe/London">(GMT+0:00) London, Dublin</option>
                                        <option value="Europe/Paris">(GMT+1:00) Paris, Berlin, Rome</option>
                                        <option value="America/New_York">(GMT-5:00) New York, Miami</option>
                                        <option value="America/Los_Angeles">(GMT-8:00) Los Angeles, Seattle</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="date-format">Định dạng ngày</label>
                                    <select id="date-format">
                                        <option value="dd/mm/yyyy" selected>DD/MM/YYYY</option>
                                        <option value="mm/dd/yyyy">MM/DD/YYYY</option>
                                        <option value="yyyy-mm-dd">YYYY-MM-DD</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="settings-section">
                            <h3 class="section-title">Cài đặt nội dung</h3>
                            <div class="settings-form">
                                <div class="form-group">
                                    <label for="posts-per-page">Số bài viết trên mỗi trang</label>
                                    <input type="number" id="posts-per-page" value="10" min="5" max="50">
                                </div>
                                <div class="form-group">
                                    <label for="comments-per-page">Số bình luận trên mỗi trang</label>
                                    <input type="number" id="comments-per-page" value="10" min="5" max="50">
                                </div>
                                <div class="form-group">
                                    <label for="default-category">Danh mục mặc định</label>
                                    <select id="default-category">
                                        <option value="location" selected>Địa điểm</option>
                                        <option value="guide">Cẩm nang du lịch</option>
                                        <option value="experience">Trải nghiệm</option>
                                    </select>
                                </div>
                                <div class="form-group checkbox-group">
                                    <input type="checkbox" id="auto-approve-comments" checked>
                                    <label for="auto-approve-comments">Tự động duyệt bình luận từ người dùng đã đăng
                                        ký</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-actions">
                            <button type="button" class="btn btn-secondary">Khôi phục mặc định</button>
                            <button type="button" class="btn btn-primary">Lưu thay đổi</button>
                        </div>
                    </div>

                    <!-- Appearance Settings -->
                    <div class="settings-tab" id="appearance">
                        <h2 class="settings-title">Giao diện</h2>

                        <div class="settings-section">
                            <h3 class="section-title">Chủ đề</h3>
                            <div class="theme-options">
                                <div class="theme-option">
                                    <div class="theme-preview light-theme">
                                        <div class="theme-preview-header"></div>
                                        <div class="theme-preview-sidebar"></div>
                                        <div class="theme-preview-content"></div>
                                    </div>
                                    <div class="theme-option-radio">
                                        <input type="radio" id="theme-light" name="theme" value="light" checked>
                                        <label for="theme-light">Sáng</label>
                                    </div>
                                </div>
                                <div class="theme-option">
                                    <div class="theme-preview dark-theme">
                                        <div class="theme-preview-header"></div>
                                        <div class="theme-preview-sidebar"></div>
                                        <div class="theme-preview-content"></div>
                                    </div>
                                    <div class="theme-option-radio">
                                        <input type="radio" id="theme-dark" name="theme" value="dark">
                                        <label for="theme-dark">Tối</label>
                                    </div>
                                </div>
                                <div class="theme-option">
                                    <div class="theme-preview system-theme">
                                        <div class="theme-preview-header"></div>
                                        <div class="theme-preview-sidebar"></div>
                                        <div class="theme-preview-content"></div>
                                    </div>
                                    <div class="theme-option-radio">
                                        <input type="radio" id="theme-system" name="theme" value="system">
                                        <label for="theme-system">Theo hệ thống</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="settings-section">
                            <h3 class="section-title">Màu sắc</h3>
                            <div class="settings-form">
                                <div class="form-group">
                                    <label for="primary-color">Màu chính</label>
                                    <div class="color-picker">
                                        <input type="color" id="primary-color" value="#3b82f6">
                                        <input type="text" value="#3b82f6">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="secondary-color">Màu phụ</label>
                                    <div class="color-picker">
                                        <input type="color" id="secondary-color" value="#10b981">
                                        <input type="text" value="#10b981">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="accent-color">Màu nhấn</label>
                                    <div class="color-picker">
                                        <input type="color" id="accent-color" value="#f59e0b">
                                        <input type="text" value="#f59e0b">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="settings-section">
                            <h3 class="section-title">Phông chữ</h3>
                            <div class="settings-form">
                                <div class="form-group">
                                    <label for="font-family">Phông chữ</label>
                                    <select id="font-family">
                                        <option value="system-ui" selected>Mặc định hệ thống</option>
                                        <option value="Roboto, sans-serif">Roboto</option>
                                        <option value="Open Sans, sans-serif">Open Sans</option>
                                        <option value="Montserrat, sans-serif">Montserrat</option>
                                        <option value="Poppins, sans-serif">Poppins</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="font-size">Kích thước chữ</label>
                                    <select id="font-size">
                                        <option value="small">Nhỏ</option>
                                        <option value="medium" selected>Vừa</option>
                                        <option value="large">Lớn</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="form-actions">
                            <button type="button" class="btn btn-secondary">Khôi phục mặc định</button>
                            <button type="button" class="btn btn-primary">Lưu thay đổi</button>
                        </div>
                    </div>

                    <!-- Notifications Settings -->
                    <div class="settings-tab" id="notifications">
                        <h2 class="settings-title">Thông báo</h2>

                        <div class="settings-section">
                            <h3 class="section-title">Thông báo trong ứng dụng</h3>
                            <div class="settings-form">
                                <div class="form-group toggle-group">
                                    <div class="toggle-header">
                                        <div>
                                            <label for="notify-new-comment">Bình luận mới</label>
                                            <p class="toggle-description">Nhận thông báo khi có bình luận mới</p>
                                        </div>
                                        <div class="toggle-switch">
                                            <input type="checkbox" id="notify-new-comment" checked>
                                            <label for="notify-new-comment"></label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group toggle-group">
                                    <div class="toggle-header">
                                        <div>
                                            <label for="notify-new-user">Người dùng mới</label>
                                            <p class="toggle-description">Nhận thông báo khi có người dùng mới đăng
                                                ký</p>
                                        </div>
                                        <div class="toggle-switch">
                                            <input type="checkbox" id="notify-new-user" checked>
                                            <label for="notify-new-user"></label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group toggle-group">
                                    <div class="toggle-header">
                                        <div>
                                            <label for="notify-new-report">Báo cáo mới</label>
                                            <p class="toggle-description">Nhận thông báo khi có báo cáo mới</p>
                                        </div>
                                        <div class="toggle-switch">
                                            <input type="checkbox" id="notify-new-report" checked>
                                            <label for="notify-new-report"></label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="settings-section">
                            <h3 class="section-title">Thông báo qua email</h3>
                            <div class="settings-form">
                                <div class="form-group toggle-group">
                                    <div class="toggle-header">
                                        <div>
                                            <label for="email-new-comment">Bình luận mới</label>
                                            <p class="toggle-description">Nhận email khi có bình luận mới</p>
                                        </div>
                                        <div class="toggle-switch">
                                            <input type="checkbox" id="email-new-comment">
                                            <label for="email-new-comment"></label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group toggle-group">
                                    <div class="toggle-header">
                                        <div>
                                            <label for="email-new-user">Người dùng mới</label>
                                            <p class="toggle-description">Nhận email khi có người dùng mới đăng ký
                                            </p>
                                        </div>
                                        <div class="toggle-switch">
                                            <input type="checkbox" id="email-new-user">
                                            <label for="email-new-user"></label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group toggle-group">
                                    <div class="toggle-header">
                                        <div>
                                            <label for="email-new-report">Báo cáo mới</label>
                                            <p class="toggle-description">Nhận email khi có báo cáo mới</p>
                                        </div>
                                        <div class="toggle-switch">
                                            <input type="checkbox" id="email-new-report" checked>
                                            <label for="email-new-report"></label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group toggle-group">
                                    <div class="toggle-header">
                                        <div>
                                            <label for="email-system">Thông báo hệ thống</label>
                                            <p class="toggle-description">Nhận email về các cập nhật và bảo trì hệ
                                                thống</p>
                                        </div>
                                        <div class="toggle-switch">
                                            <input type="checkbox" id="email-system" checked>
                                            <label for="email-system"></label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-actions">
                            <button type="button" class="btn btn-secondary">Khôi phục mặc định</button>
                            <button type="button" class="btn btn-primary">Lưu thay đổi</button>
                        </div>
                    </div>

                    <!-- Privacy Settings -->
                    <div class="settings-tab" id="privacy">
                        <h2 class="settings-title">Quyền riêng tư</h2>

                        <div class="settings-section">
                            <h3 class="section-title">Cài đặt quyền riêng tư</h3>
                            <div class="settings-form">
                                <div class="form-group toggle-group">
                                    <div class="toggle-header">
                                        <div>
                                            <label for="privacy-comments">Yêu cầu phê duyệt bình luận</label>
                                            <p class="toggle-description">Tất cả bình luận phải được phê duyệt trước
                                                khi hiển thị</p>
                                        </div>
                                        <div class="toggle-switch">
                                            <input type="checkbox" id="privacy-comments" checked>
                                            <label for="privacy-comments"></label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group toggle-group">
                                    <div class="toggle-header">
                                        <div>
                                            <label for="privacy-registration">Yêu cầu xác minh email khi đăng
                                                ký</label>
                                            <p class="toggle-description">Người dùng phải xác minh email trước khi
                                                có thể đăng nhập</p>
                                        </div>
                                        <div class="toggle-switch">
                                            <input type="checkbox" id="privacy-registration" checked>
                                            <label for="privacy-registration"></label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group toggle-group">
                                    <div class="toggle-header">
                                        <div>
                                            <label for="privacy-analytics">Thu thập dữ liệu phân tích</label>
                                            <p class="toggle-description">Thu thập dữ liệu phân tích để cải thiện
                                                trải nghiệm người dùng</p>
                                        </div>
                                        <div class="toggle-switch">
                                            <input type="checkbox" id="privacy-analytics" checked>
                                            <label for="privacy-analytics"></label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="settings-section">
                            <h3 class="section-title">Chính sách bảo mật</h3>
                            <div class="settings-form">
                                <div class="form-group">
                                    <label for="privacy-policy">Chính sách bảo mật</label>
                                    <textarea id="privacy-policy"
                                        rows="6">Chính sách bảo mật này mô tả cách chúng tôi thu thập, sử dụng và chia sẻ thông tin cá nhân của bạn khi bạn sử dụng trang web của chúng tôi.

Khi bạn truy cập trang web, chúng tôi thu thập một số thông tin nhất định về thiết bị của bạn, bao gồm thông tin về trình duyệt web, địa chỉ IP, múi giờ và một số cookie được cài đặt trên thiết bị của bạn.

Chúng tôi sử dụng thông tin cá nhân của bạn để cung cấp dịch vụ, cải thiện trang web và liên lạc với bạn khi cần thiết.</textarea>
                                </div>
                                <div class="form-group">
                                    <label for="terms-of-service">Điều khoản dịch vụ</label>
                                    <textarea id="terms-of-service"
                                        rows="6">Bằng cách truy cập hoặc sử dụng trang web của chúng tôi, bạn đồng ý bị ràng buộc bởi các điều khoản và điều kiện này.

Bạn không được sử dụng trang web của chúng tôi cho bất kỳ mục đích bất hợp pháp hoặc bị cấm nào, hoặc gây hại đến bất kỳ cá nhân hoặc tổ chức nào.

Chúng tôi có quyền từ chối dịch vụ, chấm dứt tài khoản, xóa hoặc chỉnh sửa nội dung theo quyết định riêng của chúng tôi.</textarea>
                                </div>
                            </div>
                        </div>

                        <div class="form-actions">
                            <button type="button" class="btn btn-secondary">Khôi phục mặc định</button>
                            <button type="button" class="btn btn-primary">Lưu thay đổi</button>
                        </div>
                    </div>

                    <div class="settings-tab" id="backup">
                        <h2 class="settings-title">Sao lưu & Khôi phục</h2>

                        <div class="settings-section">
                            <h3 class="section-title">Sao lưu dữ liệu</h3>
                            <div class="settings-form">
                                <div class="form-group">
                                    <label>Sao lưu thủ công</label>
                                    <p class="form-description">Tạo bản sao lưu đầy đủ của tất cả dữ liệu hệ thống.
                                    </p>
                                    <div class="backup-options">
                                        <div class="checkbox-group">
                                            <input type="checkbox" id="backup-posts" checked>
                                            <label for="backup-posts">Bài viết</label>
                                        </div>
                                        <div class="checkbox-group">
                                            <input type="checkbox" id="backup-comments" checked>
                                            <label for="backup-comments">Bình luận</label>
                                        </div>
                                        <div class="checkbox-group">
                                            <input type="checkbox" id="backup-users" checked>
                                            <label for="backup-users">Người dùng</label>
                                        </div>
                                        <div class="checkbox-group">
                                            <input type="checkbox" id="backup-settings" checked>
                                            <label for="backup-settings">Cài đặt</label>
                                        </div>
                                        <div class="checkbox-group">
                                            <input type="checkbox" id="backup-media" checked>
                                            <label for="backup-media">Thư viện media</label>
                                        </div>
                                    </div>
                                    <button class="btn btn-primary">
                                        <i class="fas fa-download"></i>
                                        Tạo bản sao lưu
                                    </button>
                                </div>
                                <div class="form-group">
                                    <label>Sao lưu tự động</label>
                                    <p class="form-description">Tự động tạo bản sao lưu theo lịch trình.</p>
                                    <div class="toggle-group">
                                        <div class="toggle-header">
                                            <div>
                                                <label for="auto-backup">Bật sao lưu tự động</label>
                                            </div>
                                            <div class="toggle-switch">
                                                <input type="checkbox" id="auto-backup" checked>
                                                <label for="auto-backup"></label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group">
                                            <label for="backup-frequency">Tần suất</label>
                                            <select id="backup-frequency">
                                                <option value="daily">Hàng ngày</option>
                                                <option value="weekly" selected>Hàng tuần</option>
                                                <option value="monthly">Hàng tháng</option>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label for="backup-time">Thời gian</label>
                                            <input type="time" id="backup-time" value="02:00">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="backup-retention">Giữ bản sao lưu trong</label>
                                        <select id="backup-retention">
                                            <option value="7">7 ngày</option>
                                            <option value="30" selected>30 ngày</option>
                                            <option value="90">90 ngày</option>
                                            <option value="365">365 ngày</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="settings-section">
                            <h3 class="section-title">Khôi phục dữ liệu</h3>
                            <div class="settings-form">
                                <div class="form-group">
                                    <label>Khôi phục từ bản sao lưu</label>
                                    <p class="form-description">Tải lên bản sao lưu để khôi phục dữ liệu hệ thống.
                                    </p>
                                    <div class="file-upload">
                                        <input type="file" id="restore-file" accept=".zip,.sql,.json">
                                        <label for="restore-file">
                                            <i class="fas fa-upload"></i>
                                            <span>Chọn tệp sao lưu</span>
                                        </label>
