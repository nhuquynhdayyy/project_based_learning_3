@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const typeSelect = document.getElementById('typeOfPostSelect');
            const fieldsContainer = document.getElementById('additionalFieldsContainer');
            const allFieldSections = fieldsContainer.querySelectorAll('.post-type-fields');

            function toggleFields() {
                const selectedType = typeSelect.value;

                // Ẩn tất cả các section trước
                allFieldSections.forEach(section => {
                    section.style.display = 'none';
                });

                // Hiển thị section tương ứng
                if (selectedType === 'Địa điểm') {
                    document.getElementById('fieldsDiaDiem').style.display = 'block';
                } else if (selectedType === 'Cẩm nang') {
                    document.getElementById('fieldsCamNang').style.display = 'block';
                } else if (selectedType === 'Trải nghiệm') {
                    document.getElementById('fieldsTraiNghiem').style.display = 'block';
                }
                // Không cần else cho "Bài viết" hoặc "" vì chúng không có trường đặc biệt
            }

            // Bắt sự kiện thay đổi dropdown
            typeSelect.addEventListener('change', toggleFields);

            // Gọi lần đầu khi load trang (quan trọng khi có lỗi validation và trang load lại)
            toggleFields();

            // --- Phần xử lý ảnh preview và hover (giữ nguyên) ---
            const imageUpload = document.getElementById('imageUpload');
            const imagePreview = document.getElementById('imagePreview');
            const imageContainer = document.getElementById('imageUploadContainer');
            const imageOverlay = document.querySelector('.image-upload-overlay');
            const defaultImageSrc = "/images/default-post-image.png"; // Lưu ảnh mặc định

            imageUpload.addEventListener('change', function (e) {
                const file = e.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function (event) {
                        imagePreview.src = event.target.result;
                    }
                    reader.readAsDataURL(file);
                } else {
                     // Nếu người dùng hủy chọn file, có thể quay về ảnh mặc định hoặc ảnh cũ (nếu là edit)
                     // Lấy giá trị từ input hidden ImageUrl nếu có (cho edit)
                     const existingImageUrl = document.querySelector('input[type="hidden"][asp-for="ImageUrl"]')?.value;
                     imagePreview.src = existingImageUrl || defaultImageSrc;
                }
            });

            if (imageContainer) {
                 imageContainer.addEventListener('mouseenter', function () {
                    if(imageOverlay) imageOverlay.style.opacity = '1';
                });

                imageContainer.addEventListener('mouseleave', function () {
                     if(imageOverlay) imageOverlay.style.opacity = '0';
                });

                imageContainer.addEventListener('click', function () {
                    imageUpload.click();
                });
            }
             // --- Phần xử lý nút editor toolbar (giữ nguyên) ---
             document.querySelectorAll('.editor-toolbar .btn').forEach(button => {
                button.addEventListener('click', function (e) {
                    e.preventDefault();
                    // Chức năng thực tế cần thêm thư viện editor hoặc code JS phức tạp hơn
                    // Ví dụ đơn giản:
                    document.execCommand(this.querySelector('i').className.split(' ').pop().replace('fa-', ''), false, null);
                    this.classList.toggle('active');
                });
            });

        });
    </script>
