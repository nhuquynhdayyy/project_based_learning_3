@model IEnumerable<TourismWeb.Models.PostVideo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Post)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VideoUrl)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Post.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VideoUrl)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PostVideoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PostVideoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PostVideoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
